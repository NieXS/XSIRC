if bld.env['windows'] == 'yes':
	flags = ['-g','-mingw32']
	bld.stlib(
		source = 'localtime_r_w32.c',
		target = 'localtime_r')
	to_use = 'localtime_r'
else:
	flags = ['-g']
	to_use = ''
bld.stlib(
	source = 'tag_table.c',
	uselib = 'GTK',
	target = 'tag_table')
# Bah
bld.stlib(
	source = 'tag_table_sh.c',
	uselib = 'GTK',
	target = 'tag_table_sh')
bld.program(
	source    = bld.path.ant_glob('*.vala'),
	features  = 'c cprogram',
	packages  = 'gtk+-2.0 gio-2.0 gee-1.0 posix config glib-2.0 gmodule-2.0 libnotify',
	vapi_dirs = '../vapi',
	includes  = '../vapi',
	target    = 'xsirc',
	use       = 'tag_table',
	cflags    = ['-include','config.h','-g'],
	linkflags = flags,
	uselib    = 'GTK GLIB GIO GEE GMODULE NOTIFY',
	)

bld.shlib(
	source = bld.path.ant_glob('*.vala'),
	features  = 'c cshlib',
	packages  = 'gtk+-2.0 gio-2.0 gee-1.0 posix config glib-2.0 gmodule-2.0 libnotify',
	vapi_dirs = '../vapi',
	includes  = '../vapi',
	target    = 'xsirc',
	use       = 'tag_table_sh',
	cflags    = ['-include','config.h','-g'],
	linkflags = flags,
	uselib    = 'GTK GLIB GIO GEE GMODULE NOTIFY',
	)
